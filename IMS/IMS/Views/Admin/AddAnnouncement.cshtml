
@model IMS.Models.AnnouncemtentModels.AddAnnouncementModel
@{
    ViewBag.Title = "Add Annoucement";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}

<div class="col-lg-6 col-md-6 ">
    <form class="form-wrap" action="/Admin/AddAnnouncement" style="padding-top:0em" method="post" enctype="multipart/form-data">
        <hr />
            @Html.LabelFor(m => m.News)
            @Html.TextBoxFor(m => m.News, new {@class = "form-control", placeholder = "Enter Announcement" })
            @Html.ValidationMessageFor(m => m.News)
            <br />
            @Html.LabelFor(m => m.AnnouncementDate)
            @Html.TextBoxFor(m => m.AnnouncementDate, new { @class = "form-control", @type = "date", placeholder = "Enter Announcement Date" })
            <br />
            @Html.DropDownListFor(m => m.CourseId , new SelectList(Model.allCourses , "Id", "Name"), "Select Course", new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.CourseId)
            <br />
            <button class="primary-btn text-uppercase">Add Announcement</button>
</form>
</div>


